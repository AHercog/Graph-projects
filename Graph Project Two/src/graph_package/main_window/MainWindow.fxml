<?xml version="1.0" encoding="UTF-8"?>

<?import graph_package.graph_classes.GraphCanvas?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" prefHeight="500.0" prefWidth="500.0" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="graph_package.main_window.MainWindowController">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <GraphCanvas fx:id="canvas" height="300.0" width="300.0"/>
    <Button fx:id="randomizeGraphButton" cache="true" mnemonicParsing="false"
            onMouseClicked="#randomizeGraphButtonClick"
            style="-fx-background-color: #673ab7; -fx-border-style: solid; -fx-border-color: #673ab7; -fx-border-width: 1;"
            text="ZRANDOMIZUJ GRAF" textAlignment="CENTER" textFill="WHITE" wrapText="true" GridPane.columnIndex="2">
        <font>
            <Font name="Calibri" size="20.0"/>
        </font>
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <effect>
            <DropShadow blurType="GAUSSIAN" color="#00000080" height="10.0" offsetX="2.0" offsetY="2.0" radius="4.5"
                        width="10.0"/>
        </effect>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </Button>
</GridPane>
